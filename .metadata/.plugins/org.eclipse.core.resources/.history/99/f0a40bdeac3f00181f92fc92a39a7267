	<script type="text/javascript">
		function fun(oid){
			$.getJSON("${pageContext.request.contextPath}/adminOrder",{"method":"findOrderByOid","oid":oid},function(result){
				var str= "<table width='400' height='300' cellSpacing='1' border='1' align='center'><tr><th>商品图片</th><th>商品名称</th><th>购买数量</th></tr>"
				$(result).each(function(index,element){
					str += "<tr width='160' height='160' align='center'><td><img src=${pageContext.request.contextPath}/"+element.pro.pimage+"></td><td>"+element.pro.pname+"</td><td>"+element.count+"</td></tr>";
				})
				str += "</table>";
				layer.open({
			        type: 1,//0:信息框; 1:页面; 2:iframe层;3:加载层;	4:tip层
			        title:"订单详情",//标题
			        area: ['500px', '400px'],//大小
			        shadeClose: false, //点击弹层外区域 遮罩关闭
			        content: str//内容
			    });
			})
		}
	</script>
